# LangGraph Configuration (direct API)
NEXT_PUBLIC_API_URL=http://localhost:2024
NEXT_PUBLIC_ASSISTANT_ID=agent
# Optional: enable IAP auth mode (hides API key UI)
NEXT_PUBLIC_AUTH_MODE=iap
# Optional: override the recursion limit passed when invoking the agent (defaults to 50)
NEXT_PUBLIC_AGENT_RECURSION_LIMIT=50

# IAP -> LangGraph JWT auth (server-side)
IAP_AUDIENCE=
LANGGRAPH_AUTH_JWT_SECRET=
LANGGRAPH_AUTH_JWT_ISSUER=
LANGGRAPH_AUTH_JWT_AUDIENCE=

# GCS bucket used for file uploads
GCS_BUCKET_NAME=

# Model provider selection
# Server-side value controls server behavior
MODEL_PROVIDER=OPENAI
# Client-side hint for building content blocks
NEXT_PUBLIC_MODEL_PROVIDER=OPENAI

# Optional: OpenAI Files API for PDFs (when MODEL_PROVIDER=OPENAI)
OPENAI_API_KEY=
# Purpose and expiry settings for OpenAI files
OPENAI_FILES_PURPOSE=assistants
# expires_after[anchor] can be: created_at
OPENAI_FILES_EXPIRES_AFTER_ANCHOR=created_at
# expires_after[seconds] default ~90 days (7776000)
OPENAI_FILES_EXPIRES_AFTER_SECONDS=7776000

# Production LangGraph Configuration (direct) - Uncomment to use
# NEXT_PUBLIC_ASSISTANT_ID="agent"
# This should be the deployment URL of your LangGraph server
# NEXT_PUBLIC_API_URL="https://my-agent.default.us.langgraph.app"
# Enable IAP-backed auth mode
# NEXT_PUBLIC_AUTH_MODE="iap"
# IAP audience for your Cloud Run service
# IAP_AUDIENCE="/projects/PROJECT_NUMBER/locations/REGION/services/SERVICE_NAME"
# LangGraph JWT settings (match backend custom auth)
# LANGGRAPH_AUTH_JWT_SECRET="..."
# LANGGRAPH_AUTH_JWT_ISSUER="https://your-company.example"
# LANGGRAPH_AUTH_JWT_AUDIENCE="https://your-langgraph.example"
